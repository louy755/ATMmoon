<div class="row">
  <div class="col-md-7 col-md-offset-2 ">
    <div class="col-md-9 col-md-offset-2 ">
      <h4> 
        <br><br><br><br>
        <center><strong>ATM Name:</strong>
        <%= @atm_mach.name %>
      </h4>
      <h4>
        <strong>ATM Address</strong>
        <%= @atm_mach.street %>
        <%= @atm_mach.city %>
        <%= @atm_mach.state %>
        <%= @atm_mach.zip_code %>
      </h4><hr></center>
      <%if current_user.account.present? %>
        <center><h3>Avalable Balance : 
        <strong><%=number_to_currency(current_user.account.balance.to_f)%> </strong></h3></center>
      <%else%>
        <center><h3><strong class="label label-danger text-uppercase "> <%= p "NO Account Associated This Email " %></strong></h3></center>
      <%end%><hr>
    </div>
  </div>
</div>
<div class="row"> 
  <div class="col-md-8 col-md-offset-3">
    <% if current_user.user_info.present? %>
       <center><p><%=link_to 'transactions',  transaction_list_account_path(current_user.account ),class:"btn btn-info btn-lg"%> &nbsp;
      <%=link_to 'Withdrawal ', new_withdrawal_account_path(current_user.account ),class:"btn btn-danger btn-lg"%> &nbsp;
      <%=link_to 'Add Deposit',  new_deposit_account_path(current_user.account),class:"btn btn-success btn-lg"%> &nbsp;
       <%= link_to 'Information',edit_user_info_path(current_user.user_info.id,atm_no: @atm_mach.id),class:"btn btn-info btn-lg"%> &nbsp;</p></center>
        <center><%= link_to 'Avalable ATMS', atm_maches_path ,class:"btn btn-info btn-lg" %></center>
    <%else%> 
      <div class="row">
      <center><%= link_to 'Create New Account ',new_user_info_path(atm_no: @atm_mach.id ),class:" col-md-4 col-md-offset-2  btn btn-info btn-lg" %></center>
      </div>
    <%end%>
  </div>
</div>        

 